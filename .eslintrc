{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "es2015",
    "eslint:recommended"
  ],
  "rules": {
    "indent": ["error", 2],
    "semi": ["error", "always"]
  }
}
